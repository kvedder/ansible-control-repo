# NGINX reverse proxy for NetBox
# Generated by Ansible

# Redirect HTTP to HTTPS
server {
    listen 80;
    server_name {{ netbox_server_name }};
    return 301 https://$host$request_uri;
}

# Main HTTPS server block
server {
    listen 443 ssl http2;
    server_name {{ netbox_server_name }};

    ssl_certificate     /etc/ssl/certs/wildcard.provider.net.fullchain.crt;
    ssl_certificate_key /etc/ssl/private/wildcard.provider.net.key;

    # Strong TLS configuration
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH';
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    access_log /var/log/nginx/netbox_access.log;
    error_log  /var/log/nginx/netbox_error.log;

    # Proxy NetBox application traffic to Gunicorn
    location / {
        proxy_pass http://{{ netbox_upstream_host }}:{{ netbox_upstream_port }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_redirect off;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        client_max_body_size 25m;
    }

    # === Static content location (SSL-only) ===
    location /static/ {
        alias /opt/netbox/netbox/static/;
        autoindex off;
        access_log off;
        expires 30d;
        add_header Cache-Control "public";
    }
}
